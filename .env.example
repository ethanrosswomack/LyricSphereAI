# Cloudflare Account & API
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here

# GitHub Integration
GITHUB_PAT=your_github_personal_access_token_here
GITHUB_REPO=https://github.com/ethanrosswomack/lyrical-miracles.git

# R2 Storage (for audio files, lyrics, images)
R2_BUCKET_NAME=omniversal-s3
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Vectorize (for lyric search/RAG)
VECTORIZE_INDEX_NAME=autorag-lyrical-miracles

# KV Storage
KV_NAMESPACE_ID=your_kv_namespace_id
KV_BINDING=LYRIC_ARSENAL_KV

# D1 Database
D1_DATABASE_ID=your_d1_database_id
D1_DATABASE_NAME=arsenal_db

# Workers AI & Gateway
WORKERS_AI_MODEL=@cf/meta/llama-3.1-8b-instruct
AI_GATEWAY_ID=everlight
AI_GATEWAY_UUID=your_gateway_uuid

# Secrets Store
SECRETS_STORE_ID=your_secrets_store_id
AI_SEARCH_API_TOKEN=your_ai_search_token

# Worker Configuration
WORKER_NAME=lyrical-miracles-chat
WORKER_SUBDOMAIN=omniversalmail

# Domain Configuration
PAGES_DOMAIN=arsenal.reincarnated2resist.com
CUSTOM_DOMAIN=arsenal.reincarnated2resist.com

# Development
NODE_ENV=development