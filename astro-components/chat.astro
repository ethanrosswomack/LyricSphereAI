---
import ChatInterface from '../components/chat/ChatInterface';

// Replace with your actual Cloudflare Worker URL
const workerEndpoint = import.meta.env.PUBLIC_CHAT_WORKER_URL || 'https://cf-autorag-hawkeye.your-subdomain.workers.dev/chat';
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Explore Hawk Eye's music through conversation. Ask about lyrics, meanings, and discover deeper insights into the catalog." />
    <title>Chat â€” Hawk Eye Lyric Vault</title>
    
    <!-- Add this if you're using Tailwind CSS in your Astro project -->
    <style is:global>
      :root {
        --background: 0 0% 100%;
        --foreground: 240 5% 10%;
        --border: 240 6% 90%;
        --card: 240 5% 98%;
        --card-foreground: 240 5% 10%;
        --card-border: 240 6% 94%;
        --primary: 280 65% 45%;
        --primary-foreground: 280 10% 98%;
        --secondary: 240 5% 90%;
        --secondary-foreground: 240 5% 15%;
        --muted: 240 8% 91%;
        --muted-foreground: 240 4% 35%;
        --accent: 280 12% 94%;
        --accent-foreground: 280 8% 20%;
        --input: 240 6% 75%;
        --ring: 280 65% 45%;
      }

      .dark {
        --background: 240 4% 8%;
        --foreground: 240 5% 95%;
        --border: 240 4% 18%;
        --card: 240 4% 11%;
        --card-foreground: 240 5% 95%;
        --card-border: 240 4% 16%;
        --primary: 280 60% 55%;
        --primary-foreground: 280 8% 98%;
        --secondary: 240 4% 19%;
        --secondary-foreground: 240 5% 92%;
        --muted: 240 6% 17%;
        --muted-foreground: 240 5% 70%;
        --accent: 280 10% 20%;
        --accent-foreground: 280 8% 92%;
        --input: 240 5% 35%;
        --ring: 280 60% 55%;
      }

      * {
        border-color: hsl(var(--border));
      }

      body {
        font-family: system-ui, -apple-system, sans-serif;
        background: hsl(var(--background));
        color: hsl(var(--foreground));
        margin: 0;
        padding: 0;
      }
    </style>
  </head>
  <body>
    <ChatInterface 
      client:load 
      workerEndpoint={workerEndpoint}
    />
  </body>
</html>
